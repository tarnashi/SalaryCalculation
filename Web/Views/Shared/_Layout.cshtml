@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — Salary Calculation</title>
    @Styles.Render("~/Content/css")
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <a class="navbar-brand" href="#">Salary Calculation</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Мои данные</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Staff/Workers">Сотрудники</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Staff/Positions">Должности</a>
                </li>
            </ul>
        </div>
        @{
            string login = HttpContext.Current.User.Identity.Name;
            if (!string.IsNullOrWhiteSpace(login))
            {
                <span class="float-right">Здравствуйте, @login | <a href="/Account/Logout">Выйти</a></span>
            }
        }
    </nav>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year — Salary Calculation</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
